{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@common": ["/common/*"],
      "@types": ["./types/*"],
      "@decorators": ["./decorators/*"],
      "@app": ["./app/*"]
    },
    "sourceMap": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "excludeDirectories": [
      "node_modules",
      "dist",
      "build",
      "out-tsc",
      "out-tsc-esm",
      "out-tsc-esm5"
    ],
  }
}
